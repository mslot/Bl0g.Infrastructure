{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "mssqlAdminLogin": {
      "type": "string"
    },
    "mssqlAdminPassword": {
      "type": "securestring"
    },
    "mssqlDatabaseName": {
      "type": "string"
    },
    "mssqlCollation": {
      "type": "string",
      "defaultValue": "SQL_Latin1_General_CP1_CI_AS"
    },
    "mssqlSkuName": {
      "type": "string",
      "defaultValue": "B"
    },
    "mssqlServerName": {
      "type": "string"
    },
    "env": {
      "type": "string"
    },
    "storageSasToken": {
      "type": "string"
    },
    "storageUri": {
      "type": "string"
    }
  },
  "variables": {
    "azuretemplatestoragename": "[concat('azuretemplatestorage',parameters('env'))]",
    "azuretemplatestorageurl": "[parameters('storageUri')]",
    "location": "[resourceGroup().location]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "name": "databaseDeploy",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(deployment().properties.templateLink.uri,concat('SubTemplates/Databases/mssql.json',parameters('storageSasToken')))]"
        },
        "parameters": {
          "adminLogin": { "value": "[parameters('mssqlAdminLogin')]" },
          "adminPassword": { "value": "[parameters('mssqlAdminPassword')]" },
          "databaseName": { "value": "[parameters('mssqlDatabaseName')]" },
          "collation": { "value": "[parameters('mssqlCollation')]" },
          "skuName": { "value": "[parameters('mssqlSkuName')]" },
          "serverName": { "value": "[parameters('mssqlServerName')]" },
          "env": { "value": "[parameters('env')]" },
          "location": { "value": "[variables('location')]" }
        }
      }
    }
  ],
  "outputs": {
    "mssqlConnectionstring": {
      "type": "string",
      "value": "[reference('databaseDeploy').outputs.connectionstring.value]"

    }
  }
}
